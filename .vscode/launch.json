{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome (Vite)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "dev"
    },
    {
      "name": "Attach to Chrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222
    }
  ]
}
